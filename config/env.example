NEXT_PUBLIC_APP_NAME=Job Application Copilot
NEXTAUTH_SECRET=changeme-in-prod
MONGODB_URI=mongodb://localhost:27017/job_app_copilot
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=7d
REDIS_URL=redis://localhost:6379

# External Job Search API Keys
# JSEARCH_API_KEY: Optional - RapidAPI key for JSearch API (provides more job listings)
#                  If not set, falls back to Remotive API (free, no key required)
#                  Get from: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
JSEARCH_API_KEY=

# ADZUNA_APP_ID and ADZUNA_APP_KEY: Optional - Adzuna API credentials (free job source)
#                                    Get from: https://developer.adzuna.com/overview
#                                    If not set, Adzuna will be skipped
ADZUNA_APP_ID=
ADZUNA_APP_KEY=

# Playwright settings for web scraping (optional)
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_CHROMIUM_PATH=

# GitHub Models API (for AI features) - REQUIRED for AI features
# Get your token from: https://github.com/settings/tokens
# Create a token with 'models:read' permission
# This is the ONLY API key needed for AI features (chat, resume feedback, cover letters, etc.)
GITHUB_TOKEN=

